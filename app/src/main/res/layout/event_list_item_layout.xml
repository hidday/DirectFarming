<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/event_list_item"
    android:paddingTop="20dp"
    android:paddingBottom="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="         Event Location"
        android:id="@+id/eventlist_event_location"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:background="#ff0a4f04"
        android:layout_alignBottom="@+id/eventlist_event_date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignTop="@+id/eventlist_event_date"
        android:layout_toLeftOf="@+id/eventlist_event_date"
        android:layout_toStartOf="@+id/eventlist_event_date"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="                 Event Date"
        android:id="@+id/eventlist_event_date"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:background="#8f03d21b"
        android:layout_alignTop="@+id/event_list_button"
        android:editable="false"
        android:layout_toLeftOf="@+id/event_list_button"
        android:layout_alignParentBottom="true"
        android:minWidth="100dp"
        android:longClickable="true"
        android:singleLine="false" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/event_list_button"
        android:src="@android:drawable/ic_menu_send"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
