<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtwelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/Welcome"
        android:paddingTop="50dp"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txtuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtwelcome"
        android:layout_centerHorizontal="true" />


    <Button android:id="@+id/auctions" style="?android:textAppearanceSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/auctions_active"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/login_button_shape"
        android:layout_above="@+id/history"
        android:layout_alignLeft="@+id/history"
        android:layout_alignStart="@+id/history" />

    <Button android:id="@+id/history" style="?android:textAppearanceSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/history"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:background="@drawable/login_button_shape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button android:id="@+id/logout" style="?android:textAppearanceSmall"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/LogoutBtn"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:background="@drawable/login_button_shape"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/txtwelcome"
        android:layout_alignStart="@+id/txtwelcome"
        android:capitalize="none"
        android:layout_alignRight="@+id/txtwelcome"
        android:layout_alignEnd="@+id/txtwelcome" />

</RelativeLayout>
